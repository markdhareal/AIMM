<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.applicationquizapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ApplicationQuizApp">
        <activity
            android:name=".Credits"
            android:exported="false" />
        <activity
            android:name=".ResultActComb"
            android:exported="false" />
        <activity
            android:name=".ResultAct"
            android:exported="false" />
        <activity
            android:name=".WholeQuizResult"
            android:exported="false" />
        <activity
            android:name=".CombinationQuiz"
            android:exported="false" />
        <activity
            android:name=".TutorialActivity"
            android:exported="false" />
        <activity
            android:name=".PlayQuiz"
            android:exported="false" />
        <activity
            android:name=".PlayTutorial"
            android:exported="false" />
        <activity
            android:name=".CombinationsActivity"
            android:exported="false"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".HomeActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>